{
  "compilerOptions": {
    "target": "es6",
    /* Modules */
    "module": "Node16",
    "baseUrl": "./src",
    "moduleResolution": "nodenext",
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
